<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <style name="Theme.CEEPiD.DayNight.Shape" parent="Theme.CEEPiD.DayNight">
        <item name="backgroundTint">@color/night</item>
    </style>

    <style name="Theme.CEEPiD.DayNight.Background" parent="Theme.CEEPiD.DayNight">
        <item name="android:background">@drawable/background</item>
    </style>

    <style name="Theme.CEEPiD.DayNight.Toolbar" parent="Theme.CEEPiD.DayNight">
        <item name="srcCompat">@drawable/main_toolbar_dark</item>
    </style>

    <style name="Theme.CEEPiD.DayNight.RefreshButton" parent="Theme.CEEPiD.DayNight">
        <item name="tint">@color/white</item>
    </style>

    <style name="Theme.CEEPiD.DayNight.CardView" parent="Theme.CEEPiD.DayNight">
        <item name="android:stateListAnimator" ns1:ignore="NewApi,PrivateResource">
            @animator/m3_card_elevated_state_list_anim
        </item>
        <item name="cardElevation" ns1:ignore="PrivateResource">@dimen/m3_card_elevated_elevation</item>
        <item name="strokeWidth">0dp</item>
        <item name="cardBackgroundColor">@color/nightless</item>
    </style>

    <style name="Theme.CEEPiD.DayNight.Line" parent="Theme.CEEPiD.DayNight">
        <item name="android:background">@color/background_dark</item>
    </style>

    <style name="Theme.CEEPiD.DayNight.Text" parent="Theme.CEEPiD.DayNight">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Theme.CEEPiD.DayNight.Button" parent="Theme.CEEPiD.DayNight">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>